<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Show Product: <%= @product.name %></h1>
    </div>
    <!-- /.col-lg-12 -->
  </div>
  <div class="row">
    <% if notice %>
        <div class="alert alert-success">
          <strong>Success!</strong> <%= notice %>
        </div>
    <% end %>
  </div>
  <!-- /.row -->
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <%= button_to 'Manage',products_path,class: 'btn btn-success',style: 'float:left;margin-right:10px',method: :get %>
          <%= button_to 'New',new_product_path,class: 'btn btn-success',style: '',method: :get %>
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
          <div>
            <b>Name :</b> <%= @product.name %>
          </div>
          <hr/>
          <div>
            <b>Price :</b> <%= @product.price %>
          </div>
          <hr/>
          <div>
            <b>Image:</b> <%= image_tag @product.avatar.url(:thumb) %>
          </div>
          <hr/>
          <div>
            <b>Created At:</b> <%= @product.created_at %>
          </div>
          <hr/>
          <div>
            <b>Description:</b> <%= raw @product.description %>
          </div>
          <div class="row">
            <div class="col-sm-4">
            <%= button_to 'Edit',edit_product_path(id: @product.id),class: 'btn btn-warning',style: 'float:left;margin-right:10px',method: :get %>
            <%= button_to('Delete',@product, {:onclick => "return confirm('Are you sure?')", :method => :delete, :remote => true,class: 'btn btn-danger'}) %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>