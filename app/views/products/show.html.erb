
<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Categories Management</h1>
  </div>
  <div class="clear"></div>
      <div class="alert alert-success">
        <strong>Success!</strong> <%= notice %>
      </div>
  <!-- /.col-lg-12 -->
</div>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <%= button_to 'Manage',products_path,class: 'btn btn-success',style: 'float:left;margin-right:10px',method: :get %>
        <%= button_to 'New',new_product_path,class: 'btn btn-success',style: '',method: :get %>
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <div class="dataTable_wrapper">
          <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
            <thead>
            <tr>
              <th>Name</th>
              <th>Price</th>
              <th>Avatar</th>
              <th>Description</th>
              <th>Status</th>
              <th>Created At</th>
              <th>Setting</th>
            </tr>
            </thead>
            <tbody>
              <tr class="odd gradeX">
                <td><%= @product.name %></td>
                <td><%= @product.price %></td>
                <td><%= image_tag @product.avatar.url(:thumb) %></td>
                <td><%= @product.description %></td>
                <td><%= @product.status %></td>
                <td><%= @product.created_at %></td>
                <td>
                  <div class="row">
                    <div class="col-sm-3"><%= button_to 'Edit',edit_product_path(id: @product.id),class: 'btn btn-warning',style: 'float:left;margin-right:10px',method: :get %></div>
                    <div class="col-sm-6"><%= button_to('Delete',@product, {:onclick => "return confirm('Are you sure?')", :method => :delete, :remote => true,class: 'btn btn-danger'}) %></div>
                  </div>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
