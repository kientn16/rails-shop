<!-- app/views/users/new.html.erb -->
<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Create User</h1>
  </div>
  <!-- /.col-lg-12 -->
</div>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
      </div>

      <div class="panel-body">
        <div class="row">
          <div class="col-lg-6">
            <%= form_for @user, url: post_signup_path do |f| %>
                <%= render 'error_messages', object: @user %>
                <div class="form-group">
                  <%= label_tag(:name, "Name") %>
                  <%= f.text_field :name, :class => 'form-control','required' => 'required' %>
                </div>
                <div class="form-group">
                  <%= label_tag(:email, "Email") %>
                  <%= f.text_field :email, :class => 'form-control','required' => 'required' %>
                </div>

                <div class="form-group">
                  <%= label_tag(:password, "Password") %>
                  <%= f.password_field :password, :class => 'form-control','required' => 'required' %>
                </div>

                <div class="form-group">
                  <%= label_tag(:role, "Role") %>
                  <%= f.select(:role, [['Admin',1],['User',2]], {include_blank: "Choose Role"}, { :class => 'form-control'}) %>
                </div>

                <div class="form-group">
                  <%= label_tag(:status, "Status") %>
                  <%= f.select(:status, [['Active',1],['InActive',0]], {include_blank: "Choose Status"}, { :class => 'form-control'}) %>
                </div>
                <%= f.submit "Submit", :class => 'btn btn-default' %>
            <% end %>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>