
<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Users Management</h1>
  </div>
  <div class="clear"></div>
  <% if flash[:warning] %>
      <div class="alert alert-warning">
        <strong>Warning!</strong> <%= flash[:warning] %>
      </div>
  <% end %>
  <% if flash[:success] %>
      <div class="alert alert-success">
        <strong>Success!</strong> <%= flash[:success] %>
      </div>
  <% end %>
  <% if notice %>
      <div class="alert alert-success">
        <strong>Success!</strong> <%= notice %>
      </div>
  <% end %>
  <!-- /.col-lg-12 -->
</div>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <%= button_to 'New',get_signup_path,class: 'btn btn-success',style: '',method: :get %>
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <div class="dataTable_wrapper">
          <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
            <thead>
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th>Role</th>
              <th>status</th>
              <th>Created At</th>
              <th>Action</th>
            </tr>
            </thead>
            <tbody>
            <% @user.each do |c| %>
                <tr class="odd gradeX">
                  <td><%= c.name %></td>
                  <td><%= c.email %></td>
                  <td><%= get_role(c.role) %></td>
                  <td><%= get_status(c.status) %></td>
                  <td><%= c.created_at %></td>
                  <td>
                    <%= button_to 'Edit',edit_user_path(id: c.id),class: 'btn btn-warning',style: 'float:left;margin-right:10px',method: :get %>

                  </td>
                </tr>
            <% end %>
            </tbody>
          </table>
        </div>
        <div class="text-center">
          <div class="pagination">
            <%= will_paginate @user, renderer: BootstrapPagination::Rails %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
