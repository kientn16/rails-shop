<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Update User: <b><%= @user.name %></b></h1>
  </div>
  <!-- /.col-lg-12 -->
</div>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <%= button_to 'Manage',users_path,class: 'btn btn-success',style: 'float:left;margin-right:10px',method: :get %>
        <%= button_to 'New',get_signup_path,class: 'btn btn-success',style: 'float:left;margin-right:10px',method: :get %>
        <div class="clear"></div>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-6">
            <%= form_for @user, html: {class: "nifty_form"} do |f| %>
                <%= render 'error_messages', object: @user %>
                <input type="hidden" name="_method" value="patch">
                <div class="form-group">
                  <%= label_tag(:name, "Name") %>
                  <%= f.text_field :name, :class => 'form-control' %>
                </div>

                <div class="form-group">
                  <%= label_tag(:email, "Email") %>
                  <%= f.email_field :email, :class => 'form-control' %>
                </div>
                <div class="form-group">
                  <%= label_tag(:role, "Role") %>
                  <%= f.select(:role, [['Admin',1],['User',2]], {include_blank: "Choose Role"}, { :class => 'form-control',:selected => @user.role}) %>
                </div>
                <div class="form-group">
                  <%= label_tag(:status, "Status") %>
                  <%= f.select(:status, [['Active',1],['InActive',0]], {include_blank: "Choose Status"}, { :class => 'form-control',:selected => @user.status}) %>
                </div>
                <%= f.submit "Update", :class => 'btn btn-default' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>