<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="login-panel panel panel-default">
        <div class="panel-heading">
          <% if notice %>
              <div class="alert alert-info">
                <%= notice %>
              </div>
          <% end %>

          <% if flash[:error]%>
              <div class="alert alert-danger">
                <%= flash[:error] %>
              </div>
          <% end %>
          <h3 class="panel-title">Please Sign In</h3>
        </div>
        <div class="panel-body">
          <%= form_tag login_path do %>
              <fieldset>
                <div class="form-group">
                  <%= email_field_tag :email, '', :class => 'form-control', placeholder: 'Username','required' => 'required' %>
                </div>
                <div class="form-group">
                  <%= password_field_tag :password, '', class: 'form-control', placeholder: 'Password','required' => 'required' %>
                </div>
                <div class="checkbox">
                  <label>
                    <input name="remember" type="checkbox" value="Remember Me">Remember Me
                  </label>
                </div>
                <!-- Change this to a button or input when using this as a form -->
                <%= submit_tag "Login",class: "btn btn-lg btn-success btn-block" %>
                <!--<a href="index.html" class="btn btn-lg btn-success btn-block">Login</a>-->
              </fieldset>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
