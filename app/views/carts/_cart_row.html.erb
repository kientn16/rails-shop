<tr>
  <td><%= image_tag product.avatar.url(:thumb) %></td>
  <td class="width_40"><%= product.name %></td>
  <td><%= num_currency(order_item.total_price)%></td>
  <td>
    <%= form_for order_item, remote: true do |f| %>
        <%= token_tag %>
            <%= f.number_field :quantity, value: order_item.quantity.to_i, class: "form-control", min: 1 %>
            <%= f.hidden_field :product_id, value: product.id %>
            <div class="one-space"></div>
            <%= f.submit "Update Quantity", class: "btn btn-primary" %>
    <% end %>
  </td>
  <td><%= button_to order_item, {:onclick => "return confirm('Are you sure you wish to delete the product #{order_item.product.name} from your cart?')", :method => :delete, :remote => true,class: 'btn-clipboard remove-boder'} do %>
        <span class="glyphicon glyphicon-remove icon-danger"></span>
    <% end %>
  </td>
</tr>









