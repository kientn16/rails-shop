
<div class="col-md-9">

  <!--search box-->
  <%= render 'includes/search_frontend' %>
  <!--end search-->

  <div class="clearfix"></div>
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to "Home", root_path %></li>
    <li class="breadcrumb-item"><%= link_to @category.name, show_cate_path(@category.id) %></li>
  </ol>

  <div class="row">
    <% @products.each do |product| %>
        <div class="col-sm-4 col-lg-4 col-md-4">
          <div class="thumbnail">
            <%= image_tag product.avatar(:large)%>
            <div class="caption">
              <h4 class="pull-right">$<%= product.price%></h4>
              <h4><%= link_to product.name,show_path(product.id) %></h4>
              <%= link_to product.category.name,show_cate_path(product.category_id) %>
              <%= content_tag(:div, content_tag(:p, "#{ product.description}".html_safe), class: "description") %>
            </div>
            <div class="ratings">
              <p class="pull-right">15 reviews</p>
              <p>
                <span class="glyphicon glyphicon-star"></span>
                <span class="glyphicon glyphicon-star"></span>
                <span class="glyphicon glyphicon-star"></span>
                <span class="glyphicon glyphicon-star"></span>
                <span class="glyphicon glyphicon-star"></span>
              </p>
            </div>
            <div class="order">
              <p>
                <%= render "product_row", product: product, order_item: @order_item %>
              </p>
            </div>
          </div>
        </div>
    <% end%>

  </div>

</div>
