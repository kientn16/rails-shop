
<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Categories Management</h1>
  </div>
  <div class="clear"></div>
  <%= render 'includes/flash_msg' %>
  <!-- /.col-lg-12 -->
</div>
<div class="row">
  <%= render "search" %>
</div>
<div class="row">
    <div class="panel panel-default">
      <div class="panel-heading">
        <%= button_to 'New',new_category_path,class: 'btn btn-success',style: '',method: :get %>
      </div>
      <% if @category.size == 0 %>
            <h2 class="text-center">No data is available</h2>
      <% else %>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <div class="dataTable_wrapper">
          <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
            <thead>
            <tr>
              <th>Name</th>
              <th>Status</th>
              <th>Created At</th>
              <th>Action</th>
            </tr>
            </thead>
            <tbody>
            <% @category.each do |c| %>
              <tr class="odd gradeX">
                <td><%= c.name %></td>
                <td><%= get_status(c.status) %></td>
                <td><%= c.created_at %></td>
                <td>
                  <%= button_to 'Edit',edit_category_path(id: c.id),class: 'btn btn-warning',style: 'float:left;margin-right:10px',method: :get %>
                  <%= button_to('Delete',c, {:onclick => "return confirm('Are you sure?')", :method => :delete, :remote => true,class: 'btn btn-danger'}) %>
                </td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
        <div class="text-center">
          <div class="pagination">
            <%= will_paginate @category, renderer: BootstrapPagination::Rails %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
</div>
