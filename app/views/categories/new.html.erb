<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Create Category</h1>
  </div>
  <!-- /.col-lg-12 -->
</div>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <%= button_to 'Manage',categories_path,class: 'btn btn-success',style: '',method: :get %>
      </div>

      <div class="panel-body">
        <div class="row">
          <div class="col-lg-6">
            <%= @result %>
            <%= form_for @category, url: {action: "create"}, html: {class: "nifty_form"} do |f| %>
                <%= render 'shared/error_messages', object: @category %>
                <div class="form-group">
                  <%= label_tag(:name, "Name") %>
                  <%= f.text_field :name, :class => 'form-control' %>
                </div>

                <div class="form-group">
                  <%= label_tag(:status, "Status") %>
                  <%= f.select(:status, [['Active',1],['InActive',0]], {include_blank: "Choose Status"}, { :class => 'form-control'}) %>
                </div>
                <%= f.submit "Create", :class => 'btn btn-default' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>