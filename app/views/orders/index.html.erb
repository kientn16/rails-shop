
<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Orders Management</h1>
  </div>
  <div class="clear"></div>
  <%= render 'includes/flash_msg' %>
  <!-- /.col-lg-12 -->
</div>
<div class="row">
  <%= render 'search' %>
</div>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <!-- /.panel-heading -->
      <div class="panel-body">
        <div class="dataTable_wrapper">
          <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
            <thead>
            <tr>
              <th>Code</th>
              <th>Total Money</th>
              <th>Order Status</th>
              <th>User</th>
              <th>Created At</th>
              <th>Product</th>
              <th>Setting</th>
            </tr>
            </thead>
            <tbody>
            <% @orders.each do |p| %>
                <tr class="odd gradeX">
                  <td><%= p.tax %></td>
                  <td><%= num_currency(p.total) %></td>
                  <td><%= p.order_status.name %></td>
                  <td><%= p.user.name %></td>
                  <td><%= p.created_at %></td>
                  <td><button type="button" class="btn btn-info btn-sm" onclick="get_data_product(<%= p.id%>,'<%= post_get_data_product_path%>')" data-toggle="modal" data-target="#myModal">Product Detail</button></td>
                  <td>
                    <div class="row">
                      <div class="col-sm-4"><%= button_to 'Edit',edit_order_path(id: p.id),class: 'btn btn-warning',style: 'float:left;margin-right:10px',method: :get %></div>

                    </div>
                  </td>
                </tr>
            <% end %>
            </tbody>
          </table>
        </div>
        <div class="text-center">
          <div class="pagination">
            <%= will_paginate @product, renderer: BootstrapPagination::Rails %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Modal -->
<div class="modal fade" id="myModal" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Product</h4>
      </div>
      <table class="table">
        <thead>
          <tr>
            <td>Image</td>
            <td>Name</td>
            <td>Price</td>
          </tr>
        </thead>
        <tbody id="add-area">

        </tbody>
      </table>
        <div class="clearfix"></div>
        <hr>
      </div>
    </div>
  </div>
</div>
