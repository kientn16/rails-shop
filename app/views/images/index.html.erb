
<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Images Management</h1>
  </div>
  <div class="clear"></div>
  <% if flash[:warning] %>
      <div class="alert alert-warning">
        <strong>Warning!</strong> <%= flash[:warning] %>
      </div>
  <% end %>
  <% if flash[:success] %>
      <div class="alert alert-success">
        <strong>Success!</strong> <%= flash[:success] %>
      </div>
  <% end %>
  <% if notice %>
      <div class="alert alert-success">
        <strong>Success!</strong> <%= notice %>
      </div>
  <% end %>
  <!-- /.col-lg-12 -->
</div>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <!-- /.panel-heading -->
      <div class="panel-body">
        <div class="dataTable_wrapper">
          <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
            <thead>
            <tr>
              <th>Product</th>
              <th>Image</th>
              <th>Created At</th>
              <th>Setting</th>
            </tr>
            </thead>
            <tbody>
            <% @image.each do |p| %>
                <tr class="odd gradeX">
                  <td><%= p.product.name %></td>
                  <td><%= image_tag p.image.url(:thumb) %></td>
                  <td><%= p.created_at %></td>
                  <td>
                    <%= button_to 'Edit',edit_image_path(id: p.id),class: 'btn btn-warning',style: 'float:left;margin-right:10px',method: :get %>
                    <%= button_to('Delete',p, {:onclick => "return confirm('Are you sure?')", :method => :delete, :remote => true,class: 'btn btn-danger'}) %>
                  </td>
                </tr>
            <% end %>
            </tbody>
          </table>
        </div>
        <div class="text-center">
          <div class="pagination">
            <%= will_paginate @image, renderer: BootstrapPagination::Rails %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
