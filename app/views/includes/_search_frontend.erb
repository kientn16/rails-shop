<%= form_tag root_path, method: :get do %>
<div class="col-md-12">
  <div class="row">

    <div class="col-xs-3">
      <div class="form-group">
        <%= select_tag "category_id", options_for_select(Category.all.collect {|p| [p['name'], p['id']]}, :selected=>@search[:category_id] || @search[:id]),include_blank: "Choose Category", class: 'selectpicker form-control' %>
      </div>
    </div>
    <div class="col-xs-6">
      <div class="form-group">
          <div class="input-group">
            <input type="text" class="form-control" placeholder="Search" name="key_word" value="<%= @search[:key_word] %>">
            <div class="input-group-btn">
              <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
            </div>
          </div>
      </div>
    </div>
  </div>
</div>
<%end%>
<div class="clearfix"></div>
<div class="two-space"></div>