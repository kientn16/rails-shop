<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">TradeMark Management</h1>
  </div>
  <div class="clear"></div>
  <%= render 'includes/flash_msg' %>
  <!-- /.col-lg-12 -->
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <%= button_to 'New',new_trade_mark_path,class: 'btn btn-success',style: '',method: :get %>
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <div class="dataTable_wrapper">
          <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
            <thead>
            <tr>
              <th>Name</th>
              <th>Status</th>
              <th colspan="3"></th>
            </tr>
            </thead>
            <tbody>
            <% @trade_marks.each do |t| %>
                <tr class="odd gradeX">
                  <td><%= t.name %></td>
                  <td><%= t.status %></td>
                  <td><%= link_to 'Show', t %></td>
                  <td><%= link_to 'Edit', edit_trade_mark_path(t) %></td>
                  <td><%= link_to 'Destroy', t, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
            <% end %>
            </tbody>
          </table>
        </div>
        <div class="text-center">
          <div class="pagination">
            <%= will_paginate @trade_marks, renderer: BootstrapPagination::Rails %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
